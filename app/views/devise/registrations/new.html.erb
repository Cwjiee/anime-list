<div class='content w-2/5 min-h-screen my-10 mx-auto text-xl bg-white text-colour rounded-lg'>
  <div class='container form px-5 py-5 text-center'>
    <h2 class='my-10 text-[40px] font-semibold'>Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.text_field :username, autofocus: true, autocomplete: "username", placeholder: "username", 
        class: "px-5 w-4/5 h-10 my-5 rounded gray focus:outline-none focus:border-sky-500 focus:border-sky-600 focus:ring-2 text-black" %>
      </div> 

      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "email", 
        class: "px-5 w-4/5 h-10 my-5 rounded gray focus:outline-none focus:border-sky-500 focus:border-sky-600 focus:ring-2 text-black" %>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "password (6 characters minimum)", 
        class: "px-5 w-4/5 h-10 my-5 rounded gray focus:outline-none focus:border-sky-500 focus:border-sky-600 focus:ring-2 text-black" %>
      </div>

      <div class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "password confirmation", 
        class: "px-5 w-4/5 h-10 my-5 rounded gray focus:outline-none focus:border-sky-500 focus:border-sky-600 focus:ring-2 text-black" %>
      </div>

      <div class="actions bg-blue-500 w-1/5 my-10 mx-auto rounded-full py-2">
        <%= f.submit "Sign up", class:"text-white font-semibold hover:cursor-pointer"  %>
      </div>
    <% end %>

    <div class="my-10 text-colour text-base text-xl">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
